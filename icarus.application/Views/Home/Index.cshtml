@{
    ViewData["Title"] = "Home Page";
    
}

            <h2 class="heading__secondary text-black">Projetos</h2>
            <div class="container_btn_newproject">
                <button class="button btn--main">Criar projeto</button>
              </div>
            <div class="container__options">
                <div class="container__search">
                    <form action="#" class="form">
                        <input type="text" class="search__input">
                        <div class="date__filter">
                            <label for="date">Data de início</label>
                            <input name="date" type="date" class="search__filter">
                        </div>
                        <div class="date__filter">
                            <label for="date">Data de Entrega</label>
                            <input name="date" type="date" class="search__filter">
                        </div>
                        <div class="checkbox__filter">
                            <input name="Pfinalizados"type="checkbox" class="check__input">
                            <label for="Pfinalizados">Projetos finalizados</label>
                        </div>
                        <div class="checkbox__filter">
                            <input name="Pfinalizados"type="checkbox" class="check__input">
                            <label for="Pfinalizados">Projetos em produção</label>
                        </div>
                        <button class="button btn--main">Pesquisar</button>
                    </form>
                </div>
            </div>
            <div class="container__itens">
                <div class="container__list">
                    <table class="table  table-striped">
                        <thead>
                            <tr>
                              <th scope="col"></th>
                              <th scope="col">Projeto</th>
                              <th scope="col">Status</th>
                              <th scope="col">Data de inicio</th>
                              <th scope="col">Data de Entrega</th>
                              <th scope="col">Valor</th>
                              <th scope="col"></th>
                            </tr>
                          </thead>
                          <tbody class="table-group-divider">
                            @foreach (var item in ViewBag.totalProjetos.Projects)
                            {
                              <tr>
                                <td>@item.Name</td>
                                <td>@item.Status</td>
                                <td>@item.DataIncio</td>
                                <td>@item.DataEntrega</td>
                                <td>@item.Valor</td>
                                <td>
                                  <div class="containers__btn">
                                      <a class="button btn--crud" title="Detalhes">
                                          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="icon--crud icon--crud--blue" viewBox="0 0 16 16">
                                              <path d="M10.5 8a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0z"/>
                                              <path d="M0 8s3-5.5 8-5.5S16 8 16 8s-3 5.5-8 5.5S0 8 0 8zm8 3.5a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7z"/>
                                            </svg>
                                      </a>
                                      <a class="button btn--crud" title="Deletar">
                                          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="icon--crud icon__content--red" viewBox="0 0 16 16">
                                              <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM5.354 4.646a.5.5 0 1 0-.708.708L7.293 8l-2.647 2.646a.5.5 0 0 0 .708.708L8 8.707l2.646 2.647a.5.5 0 0 0 .708-.708L8.707 8l2.647-2.646a.5.5 0 0 0-.708-.708L8 7.293 5.354 4.646z"/>
                                            </svg>
                                      </a>
                                      <a class="button btn--crud" title="Atualizar">
                                          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="icon--crud--green" viewBox="0 0 16 16">
                                              <path fill-rule="evenodd" d="M8 3a5 5 0 1 0 4.546 2.914.5.5 0 0 1 .908-.417A6 6 0 1 1 8 2v1z"/>
                                              <path d="M8 4.466V.534a.25.25 0 0 1 .41-.192l2.36 1.966c.12.1.12.284 0 .384L8.41 4.658A.25.25 0 0 1 8 4.466z"/>
                                            </svg>
                                      </a>
                                  </div>
                                </td>
                              </tr>
                            }
                          </tbody>
                      </table>
                </div>
            </div>

              <div class="container__pagination">
                <nav aria-label="Page navigation example">
                    <ul class="pagination">
                      <li class="page-item">
                      @for (int i = 1; i <= ViewBag.totalProjetos.PageCount; i++)
                      {
                          <li class="page-item"><a class="page-link" asp-controller="Home" asp-action="Index" asp-route-page="@i">@i</a></li>
                      }
                    </ul>
                  </nav>
              </div>